<% provide(:title, 'Sign up') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true) do |f| %>
    <%= f.label :task_name %>
    <%= f.text_field :task_name %>
    
    <%= f.label :detail %>
    <%= f.text_field :detail %>
    
    <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>