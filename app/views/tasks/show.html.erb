<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>タスク詳細</h1>
    <table class="table table-bodered" id="table-user">
      <tbody>
        <tr>
          <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
          <td class="col-md-6"><%= @user.id %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :task_name %></th>
          <td><%= @task.task_name %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :detail %></th>
          <td><%= @task.detail %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :created_at %></th>
          <td><%= l(@task.created_at, format: :long) %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :updated_at %></th>
          <td><%= l(@task.updated_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "編集", edit_user_task_path, class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_tasks_path, class: "btn btn-lg btn-danger" %>
    </div>
  </div>    
</div>
