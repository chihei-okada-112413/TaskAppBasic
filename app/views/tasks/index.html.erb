<h1><%= @user.name %>のタスク一覧</h1>
<%= link_to "タスク新規作成", new_user_task_path, class: "btn btn-lg btn-primary pull-right" %>
<table class="table table-hover" id="talbe-tasks">
  <thead>
    <tr>
      <th>名称</th>
      <th>作成日</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.task_name, user_task_path(@user,task) %></td>
      <td><%= l(task.created_at, format: :long) %></td>
      <td><%= link_to "編集", edit_user_task_path(@user,task), class: "btn btn-success" %>
      <a class="btn btn-danger">削除</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
