<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>プロフィール</h1>
    <table class="table table-bodered" id="table-user">
      <tbody>
        <tr>
          <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
          <td class="col-md-6"><%= @user.id %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :email %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :created_at %></th>
          <td><%= l(@user.created_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
